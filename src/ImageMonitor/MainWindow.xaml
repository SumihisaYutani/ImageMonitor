<Window x:Class="ImageMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMonitor"
        xmlns:converters="clr-namespace:ImageMonitor.Converters"
        xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
        mc:Ignorable="d"
        x:Name="RootWindow"
        Title="ImageMonitor" Height="800" Width="1200"
        MinHeight="600" MinWidth="800">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Thumbnail Size to Card Size Converter -->
        <converters:ThumbnailSizeToCardSizeConverter x:Key="ThumbnailSizeToCardSizeConverter"/>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Settings" Click="Settings_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Scan Images" Command="{Binding ScanImagesCommand}"/>
                <MenuItem Header="_Refresh" Command="{Binding RefreshCommand}"/>
                <Separator/>
                <MenuItem Header="_Database Optimization" Click="OptimizeDatabase_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="1">
            <Button Content="Scan" Command="{Binding ScanImagesCommand}" Style="{StaticResource IconButtonStyle}"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Style="{StaticResource IconButtonStyle}"/>
            <Separator/>
            
            
            
            <!-- Search Box -->
            <Label Content="Search:"/>
            <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" Margin="4" ToolTip="Search by filename (Press Enter to search)"
                     KeyDown="SearchTextBox_KeyDown"/>
            <Button Content="🔍 Search" Command="{Binding SearchImagesCommand}" Style="{StaticResource IconButtonStyle}" Margin="2,0"/>
            <Button Content="Clear" Click="ClearSearch_Click" Style="{StaticResource IconButtonStyle}"/>
            
            <Separator/>
            
            <!-- Sort Options -->
            <Label Content="Sort by:"/>
            <ComboBox SelectedValue="{Binding SortBy}" Width="120" Margin="4">
                <ComboBoxItem Content="Name" Tag="FileName"/>
                <ComboBoxItem Content="Size" Tag="FileSize"/>
                <ComboBoxItem Content="Date Created" Tag="CreatedAt"/>
                <ComboBoxItem Content="Date Modified" Tag="ModifiedAt"/>
            </ComboBox>
            <Button Content="↑↓" Command="{Binding ToggleSortDirectionCommand}" 
                    Style="{StaticResource IconButtonStyle}" 
                    ToolTip="Toggle sort direction"/>
            
            <Separator/>
            
            <!-- Properties Panel Toggle -->
            <ToggleButton Content="📋 Properties" IsChecked="{Binding IsPropertiesPanelVisible, Mode=TwoWay}"
                         Background="Transparent" BorderThickness="0" Padding="8" Margin="4" Cursor="Hand"
                         ToolTip="プロパティパネルの表示/非表示を切り替え"/>
        </ToolBar>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Image List with Virtualization -->
            <ListBox Grid.Column="0" 
                     ItemsSource="{Binding DisplayItems}"
                     SelectedItem="{Binding SelectedDisplayItem}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.CanContentScroll="True"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling">
                
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <vwp:VirtualizingWrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" 
                                Width="{Binding DataContext.ThumbnailSize, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThumbnailSizeToCardSizeConverter}, ConverterParameter='Width'}"
                                Height="{Binding DataContext.ThumbnailSize, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ThumbnailSizeToCardSizeConverter}, ConverterParameter='Height'}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="{Binding DataContext.ThumbnailSize, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Thumbnail -->
                                <Border Grid.Row="0" Background="LightGray" CornerRadius="2">
                                    <Image Source="{Binding ThumbnailPath}" 
                                           Stretch="Uniform" 
                                           RenderOptions.BitmapScalingMode="Linear"
                                           UseLayoutRounding="True"
                                           SnapsToDevicePixels="True"
                                           Loaded="OnImageLoaded"/>
                                </Border>
                                
                                <!-- Information -->
                                <StackPanel Grid.Row="1" Margin="0,4,0,4" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding DisplayName}" 
                                               FontWeight="Bold" 
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding DisplayName}"
                                               MaxHeight="28"
                                               LineHeight="14"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Resolution}" 
                                               FontSize="10" 
                                               Foreground="Gray"
                                               Margin="0,2,0,1"/>
                                    <TextBlock Text="{Binding FormattedFileSize}" 
                                               FontSize="10" 
                                               Foreground="Gray"
                                               Margin="0,0,0,2"/>
                                    
                                    <!-- Folder button -->
                                    <Button Content="📂 フォルダを開く" 
                                           Width="120" Height="26" 
                                           HorizontalAlignment="Center"
                                           Margin="2,6,2,4"
                                           Background="#2196F3"
                                           Foreground="White"
                                           BorderBrush="#1976D2"
                                           BorderThickness="1"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Cursor="Hand"
                                           ToolTip="ファイルの場所をエクスプローラーで開く"
                                           Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                           CommandParameter="{Binding}"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Double-click handler -->
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftDoubleClick" 
                                              Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                              CommandParameter="{Binding}"/>
                            </Border.InputBindings>
                            <!-- Context menu for card -->
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="エクスプローラーで表示"
                                              Command="{Binding DataContext.OpenFolderCommand, ElementName=RootWindow}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <MenuItem Header="関連付けアプリで開く"
                                              Command="{Binding DataContext.OpenImageCommand, ElementName=RootWindow}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                </ContextMenu>
                            </Border.ContextMenu>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Properties Panel -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Left"
                         Visibility="{Binding IsPropertiesPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Border Grid.Column="1" Width="250" Background="White" BorderBrush="LightGray" BorderThickness="1,0,0,0"
                    Visibility="{Binding IsPropertiesPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer>
                    <StackPanel Margin="8" DataContext="{Binding SelectedDisplayItem}">
                        <TextBlock Text="Properties" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                        
                        <Grid>
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="Bold" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FileName}" TextWrapping="Wrap" Margin="8,2,0,2"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Size:" FontWeight="Bold" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FormattedFileSize}" Margin="8,2,0,2"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Resolution:" FontWeight="Bold" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Resolution}" Margin="8,2,0,2"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Format:" FontWeight="Bold" Margin="0,2"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ImageFormat}" Margin="8,2,0,2"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Created:" FontWeight="Bold" Margin="0,2"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CreatedAt, StringFormat=yyyy/MM/dd HH:mm:ss}" Margin="8,2,0,2"/>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Modified:" FontWeight="Bold" Margin="0,2"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding ModifiedAt, StringFormat=yyyy/MM/dd HH:mm:ss}" Margin="8,2,0,2"/>
                            
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Path:" FontWeight="Bold" Margin="0,2"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding FilePath}" TextWrapping="Wrap" Margin="8,2,0,2"/>
                            
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Archive:" FontWeight="Bold" Margin="0,2"
                                       Visibility="{Binding IsArchived, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding ArchivePath}" TextWrapping="Wrap" Margin="8,2,0,2"
                                       Visibility="{Binding IsArchived, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>
                        <!-- Actions for selected item -->
                        <StackPanel Orientation="Vertical" Margin="0,12,0,0">
                            <Button Content="📂 フォルダを開く"
                                    Margin="0,0,0,4" Height="28"
                                    Command="{Binding DataContext.OpenFolderCommand, ElementName=RootWindow}"
                                    CommandParameter="{Binding}"/>
                            <Button Content="🖼 開く"
                                    Height="28"
                                    Command="{Binding DataContext.OpenImageCommand, ElementName=RootWindow}"
                                    CommandParameter="{Binding}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding TotalItems, StringFormat='{}{0} items'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
